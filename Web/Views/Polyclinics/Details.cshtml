@model Domain.Domain_Models.Polyclinic

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Polyclinic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PolyclinicName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PolyclinicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PolyclinicAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PolyclinicAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reputation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reputation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableSlots)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableSlots)
        </dd>
    </dl>
</div>

<hr>

<div>
    <table style="border: 1px solid black;">
        <thead>
            <th style="border: 1px solid black;">#</th>
            <th style="border: 1px solid black;">Description</th>
            <th style="border: 1px solid black;">Date Taken</th>
            <th style="border: 1px solid black;">Employee Name</th>
            <th style="border: 1px solid black;">Polyclinic Name</th>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.HealthExaminations.Count(); i++)
            {
                var item = Model.HealthExaminations.ToList()[i];
                <tr>
                    <td style="border: 1px solid black;">@(i+1)</td>
                    <td style="border: 1px solid black;">@item.Description</td>
                    <td style="border: 1px solid black;">@item.DateTaken</td>
                    <td style="border: 1px solid black;" >@item.Employee.FullName</td>
                    <td style="border: 1px solid black;">@item.Polyclinic.PolyclinicName</td>
                </tr>
            }
        </tbody>
    </table>

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
